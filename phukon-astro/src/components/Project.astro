---
import type { Project } from "../lib/projects";
import { Link } from "../lib/Link";

type Props = {
  project: Project;
};

const {
  project: { repo: name, description, link },
} = Astro.props;
---

<div
  class="w-20.6666666666666666666666666666666666666666666666667ch flex flex-col border-2 p-3"
>
  <Link href={link}>
    <span class="font-medium text-start">{name}</span>
  </Link>

  <span class="pt-3 text-start">{description}</span>
</div>
